{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "allowJs": true,
    "lib": ["DOM"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "resolveJsonModule":true,
    "esModuleInterop": true,
   "baseUrl": "./",
    "paths": {
      "src/*": ["src/*.js"]
    },
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["./index.ts"]
}
