{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "allowJs": true,
    "lib": ["DOM"],
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noImplicitAny": false,
    "skipLibCheck": false,
    "allowSyntheticDefaultImports": true,
    "removeComments": true
  },
  "include": ["./index.ts"]
}
